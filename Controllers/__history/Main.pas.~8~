    UniMenuItems1: TUniMenuItems;
    Relatrios1: TUniMenuItem;
    Metas1: TUniMenuItem;
    Produtos1: TUniMenuItem;
    UniLabel2: TUniLabel;
    UniLabel3: TUniLabel;
